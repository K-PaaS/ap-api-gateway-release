---
name: mariadb

templates: 
  bin/mariadb_ctl.erb: bin/mariadb_ctl
  bin/post-start.erb: bin/post-start
  config/init.sql.erb: config/init.sql
  config/create_table.sql.erb: config/create_table.sql
  config/mariadb.cnf.erb: config/mariadb.cnf
  data/properties.sh: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh

packages: 
- mariadb

provides:
- name: mariadb_link
  type: mariadb
  properties:
  - port
  - service.username
  - service.password
  - service.schema_name

properties: 
  port:
    description: MariaDB server port
    default: 13306
  admin.password:
    description: MariaDB admin user password
    default: admin
  service.username:
    description: MariaDB service user
    default: service
  service.password:
    description: MariaDB service user password
    default: service
  service.schema_name:
    description: MariaDB service schema name
    default: apiGatewayBroker

