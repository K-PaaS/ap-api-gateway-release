UPDATE mysql.user SET password=PASSWORD('<%= p("admin.password") %>') WHERE user='root';
GRANT ALL PRIVILEGES ON *.* TO 'root'@'%' IDENTIFIED BY '<%= p("admin.password") %>' WITH GRANT OPTION;
FLUSH PRIVILEGES;
 
CREATE USER '<%= p("service.username") %>'@'localhost' IDENTIFIED BY '<%= p("service.password") %>';
CREATE SCHEMA IF NOT EXISTS `<%= p("service.schema_name") %>` DEFAULT CHARACTER SET utf8;
USE <%= p("service.schema_name") %>;
GRANT ALL PRIVILEGES ON <%= p("service.schema_name") %>.* TO '<%= p("service.username") %>'@'%' IDENTIFIED BY '<%= p("service.password") %>' WITH GRANT OPTION;
FLUSH PRIVILEGES;

