#!/bin/bash

set -e -x

JOB_NAME=mariadb
BASE_DIR=/var/vcap/packages/${JOB_NAME}
JOB_DIR=/var/vcap/jobs/${JOB_NAME}
DATA_DIR=/var/vcap/store/${JOB_NAME}/<%= p("service.schema_name") %>
ADMIN_PW="<%= p('admin.password')%>"

if [ ! -d "$DATA_DIR" ]; then
  ${BASE_DIR}/bin/mysql -u root < ${JOB_DIR}/config/init.sql
fi

${BASE_DIR}/bin/mysql -u root -p${ADMIN_PW} < ${JOB_DIR}/config/create_table.sql
